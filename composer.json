{
    "name": "induxx/parsable-file-multi-tool",
    "license": "MIT",
    "description": "",
    "authors": [
        {
            "name": "Thijs De Paepe",
            "email": "Thijs.dp@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-iconv": "*",
        "ext-xmlwriter": "*",
        "ext-xmlreader": "*",
        "ext-curl": "*",
        "ext-zip": "*",
        "ext-simplexml": "*",
        "symfony/yaml": "6.*",
        "beberlei/assert": "^3.3",
        "adhocore/cli": "^0.9.0",
        "firebase/php-jwt": "^v6.8",
        "aspera/xlsx-reader": "^1.1.0",
        "psr/log": "^3.0",
        "induxx/shared-app-libraries": "1.0.*",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "symfony/var-dumper": "*",
        "phpunit/phpunit": "~9.6.8",
        "phpstan/phpstan": "*",
        "jangregor/phpstan-prophecy": "*",
        "phpstan/phpstan-beberlei-assert": "^0.12.6",
        "phpspec/prophecy": "^1.17",
        "phpspec/prophecy-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Misery\\": "src/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Misery\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://app-satis.induxx.be"
        }
    ],
    "scripts": {
        "test": [
            "php vendor/bin/phpunit",
            "vendor/bin/phpstan analyse --no-progress --ansi -l 5 src",
            "vendor/bin/phpstan analyse --no-progress --ansi -l 5 tests"
        ],
        "github-test": [
            "php vendor/bin/phpunit --exclude-group performance"
        ],
        "unit-test": [
            "php vendor/bin/phpunit"
        ],
        "sa-test": [
            "vendor/bin/phpstan analyse --no-progress --ansi -l 5 src",
            "vendor/bin/phpstan analyse --no-progress --ansi -l 5 tests"
        ]
    }
}
